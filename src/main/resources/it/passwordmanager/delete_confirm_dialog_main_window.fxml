<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="150.0" prefWidth="400.0" style="-fx-background-color: #E5E5E5;"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.passwordmanager.businessLogic.fxmlController.DeleteConfirmOnMainWindowDialogController">
    <children>
        <Label alignment="CENTER" layoutY="30.0" prefHeight="25.0" prefWidth="400.0" text="Are you sure you want to delete?">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Button layoutX="74.0" layoutY="95.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" text="No" onAction="#onNoButtonClick">
            <style>
                -fx-background-radius: 15,15;
                -fx-background-color: #CBE9FF
            </style>
        </Button>
        <Button layoutX="247.0" layoutY="95.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" text="Yes" onAction="#onYesButtonClick">
            <style>
                -fx-background-radius: 15,15;
                -fx-background-color: #FF7F7F;
                <!-- -fx-text-fill: white;
                -fx-background-color: #D20000; -->
            </style>
        </Button>
    </children>
</AnchorPane>
